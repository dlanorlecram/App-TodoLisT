mixin input(type, text/*, label*/)
  .input-container
    input( type = type id="task" placeholder=text ng-model="newTask.entitled")
    //label( for=label )=label
    .bar
doctype 5
html
  head
    meta(charset = 'utf8')
    meta(description = '')
    title App TodoList
    link( href='css/master.css', type='text/css', rel='stylesheet')
    link( href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css', type='text/css', rel='stylesheet')
    script(src='../bower_components/angular/angular.min.js')
    script(src='../bower_components/jquery/dist/jquery.min.js')
    script(src='script/app_todo.js')
    script(src='script/script.js')
  body(ng-app = 'app_TodoList')
    - var name = "Ronald";
    #wrappers(ng-controller = 'sumbitCtrl')
        header
          .container
            .inner_container
              .name
                h1
                  |Hi
                  br
                  |#{name}!
              .collapse
                .dotted_grouped
                  span
                  span
                  span
              nav.menu_main
                .small_block
                  ul#menu
                    li: a(href="") Account
                    li: a(href="") Rapportez un bug
                    li: a(href="") Partager
                    li: a(href="") Contactez nous
        section
          .container
            .row
              .app
                .inner_app
                  .header_app
                    .title
                      h2 To Do app
                      p Looks like you are in a mall. Here is a list of thing you need to do.
                  .display_entry_app
                    .container
                      .item_task(ng-repeat = "task in tasks")
                        .options
                          .opt.done
                            i.ion-ios-checkmark-outline
                              //ion-ios-minus-empty
                          .opt.remove
                            i.ion-ios-close-empty
                          .opt.change
                            i.ion-ios-compose
                        .entitled
                          span {{task.entitled}}
                        .type_of_task
                          i.ion-ios-cart
                  .entry_app
                    .toggle_position
                      .magic_toggle
                        i.icon.ion-android-add
                    ng-submit(ng-submit="submitTask()")
                      .container_form
                        .inner_container_form
                          h4 Add a new task
                          //button#post(type="submit")
                            i.ion-checkmark.validate
                          form
                            button#post(type="submit")
                              i.ion-checkmark.validate
                            +input('text', 'Enter your task ...')
                            .button-container
                              h5 Choice a theme task:
                              button
                                i.ion-ios-briefcase
                              button
                                i.ion-ios-cart
                              button
                                i.ion-plane
        footer
          p Copyright (c) 2016 Copyright Holder All Rights Reserved.
